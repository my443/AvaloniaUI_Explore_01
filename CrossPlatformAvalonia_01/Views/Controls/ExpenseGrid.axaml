<UserControl
    x:Class="CrossPlatformAvalonia_01.Views.Controls.ExpenseGrid"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CrossPlatformAvalonia_01.ViewModels"
    x:DataType="vm:MainViewModel">
  <DataGrid ItemsSource="{Binding Conversations}"
            IsReadOnly="true"
            CanUserResizeColumns="true"
            AutoGenerateColumns="False"
            Margin="0,10,0,0"
            Background="LightYellow">
    <DataGrid.Columns>
      <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
      <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="*"/>
      <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="2*"/>
    </DataGrid.Columns>
  </DataGrid>
</UserControl>
